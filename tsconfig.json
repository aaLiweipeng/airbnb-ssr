{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext", // 模块化标准
    "moduleResolution": "Node", // 模块选择策略
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true, // 指定编译时 是否生成map文件
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@typings/*": ["src/typings/*"],
      "@components/*": ["src/components/*"],
      "@style/*": ["src/style/*"],
      "@utils/*": ["src/utils/*"],
      "@router/*": ["src/router/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
